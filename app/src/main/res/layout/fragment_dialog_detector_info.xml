<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/containerContent"
        android:background="@drawable/bg_button"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvInterface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorTransparentWhite" />
        <TextView
            android:id="@+id/tvFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTransparentWhite" />
        <TextView
            android:id="@+id/tvFrameSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTransparentWhite" />
        <TextView
            android:id="@+id/tvExposure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTransparentWhite" />

        <TextView
            android:id="@+id/tvCalibrationResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorTransparentWhite" />

        <TextView
            android:id="@+id/tvFrameResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorTransparentWhite" />
    </LinearLayout>

    <TextView
        android:id="@+id/btClose"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="X"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignEnd="@id/containerContent"
        android:layout_alignRight="@id/containerContent"
        android:background="@drawable/bg_button"
        />

</RelativeLayout>